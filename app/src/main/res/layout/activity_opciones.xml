<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="co.edu.udea.vista.ActivityOpciones"
    android:background="#C5E1A5">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp"
        android:paddingTop="50dp">

        <TableRow
            android:gravity="center">

            <ImageButton
                android:id="@+id/realizarPrestamo"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:background="@drawable/inicio"/>

            <EditText
                android:id="@+id/etUsuario"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:visibility="invisible"
                android:editable="false"
                android:maxWidth="10dp"/>

            <ImageButton
                android:id="@+id/registrarDevolucion"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:background="@drawable/inicio"/>
        </TableRow>

        <TableRow
            android:gravity="center">
            <TextView
                android:text="Realizar Prestamo"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"/>

            <TextView
                android:text=""
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:text="Registrar DevoluciÃ³n"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"/>
        </TableRow>


        <TableRow>
            <EditText
                android:id="@+id/separdor"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:singleLine="true"
                android:visibility="invisible"
                android:editable="false"
                android:maxWidth="10dp"/>
        </TableRow>

        <TableRow
            android:gravity="center">

            <ImageButton
                android:id="@+id/registrarElemento"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:background="@drawable/inicio"/>

            <EditText
                android:id="@+id/uu"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:visibility="invisible"
                android:editable="false"
                android:maxWidth="10dp"/>

            <ImageButton
                android:id="@+id/miInformacion"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:background="@drawable/inicio"/>
        </TableRow>

        <TableRow
            android:gravity="center">
            <TextView
                android:text="Registrar elemento"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"/>

            <TextView
                android:text=""
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:text="Mi informacion"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"/>
        </TableRow>


    </TableLayout>

</TableLayout>
